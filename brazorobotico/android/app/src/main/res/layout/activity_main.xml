<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Articulación Cintura - elementos que muestran texto en la pantalla-->
    <TextView
        android:id="@+id/textViewCintura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cintura:"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp" />

    <SeekBar
        android:id="@+id/seekBarCintura"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:max="180"
        app:layout_constraintTop_toBottomOf="@id/textViewCintura"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewGradosCintura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0°"
        app:layout_constraintTop_toBottomOf="@id/seekBarCintura"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp" />

    <!-- Articulación Hombro -->
    <TextView
        android:id="@+id/textViewHombro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hombro:"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textViewGradosCintura"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp" />

    <SeekBar
        android:id="@+id/seekBarHombro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:max="180"
        app:layout_constraintTop_toBottomOf="@id/textViewHombro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewGradosHombro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0°"
        app:layout_constraintTop_toBottomOf="@id/seekBarHombro"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp" />

    <!-- Articulación Codo -->
    <TextView
        android:id="@+id/textViewCodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Codo:"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textViewGradosHombro"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp" />

    <SeekBar
        android:id="@+id/seekBarCodo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:max="180"
        app:layout_constraintTop_toBottomOf="@id/textViewCodo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewGradosCodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0°"
        app:layout_constraintTop_toBottomOf="@id/seekBarCodo"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp" />

    <!-- Articulación Muñeca -->
    <TextView
        android:id="@+id/textViewMuneca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muñeca:"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textViewGradosCodo"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp" />

    <SeekBar
        android:id="@+id/seekBarMuneca"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:max="180"
        app:layout_constraintTop_toBottomOf="@id/textViewMuneca"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewGradosMuneca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0°"
        app:layout_constraintTop_toBottomOf="@id/seekBarMuneca"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp" />

    <!-- Articulación Mano -->
    <TextView
        android:id="@+id/textViewMano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mano:"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textViewGradosMuneca"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp" />

    <SeekBar
        android:id="@+id/seekBarMano"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:max="180"
        app:layout_constraintTop_toBottomOf="@id/textViewMano"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewGradosMano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0°"
        app:layout_constraintTop_toBottomOf="@id/seekBarMano"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp" />

    <!-- RadioGroup para Agarrar y Soltar -->
    <RadioGroup
        android:id="@+id/radioGroupAccionMano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/textViewGradosMano"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp">

        <RadioButton
            android:id="@+id/radioButtonAgarrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agarrar"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/radioButtonSoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soltar"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:padding="8dp" />
    </RadioGroup>

    <!-- Botón de Enviar -->
    <Button
        android:id="@+id/buttonEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        app:layout_constraintTop_toBottomOf="@id/radioGroupAccionMano"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
